mixin select (name,type,placeholder,value,label, state, stateDescript, li1,li2,li3, selectId,selectList,selectType)
    case selectType
        when 1
            span(class = 'select select_small' data-select-size = true)
                +inputField(name, type, placeholder, value, label, state, stateDescript, selectId)
                ul(class='select_hided' data-list=true)
                    li.select__li= li1
                        include ../counter/counter
                    li.select__li= li2
                        include ../counter/counter
                    li.select__li= li3
                        include ../counter/counter
        default
            span(class = 'select')
                +inputField(name, type, placeholder, value, label, state, stateDescript, selectId)
                ul(class='select_hided' data-list=true)
                    li.select__li= li1
                        include ../counter/counter
                    li.select__li= li2
                        include ../counter/counter
                    li.select__li= li3
                        include ../counter/counter
                    .select__btns-wrapper
                        div(class='select__clr-btn select__btn' data-clr-btn=true data-btn)
                        div(class='select__app-btn select__btn' data-app-btn=true data-btn)='ПРИМЕНИТЬ'
