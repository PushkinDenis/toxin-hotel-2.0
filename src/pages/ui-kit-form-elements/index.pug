extends ../../components/layout.pug
block title
    title= "Form elements"
block links
    link(href=require('../../index.scss') rel='stylesheet')
    link(href=require('form-elements.scss') rel='stylesheet')
block header
    include ../../components/ui-kit-header/ui-kit-header
block content
    include ../../components/input-field/input-field
    include ../../components/text-field/text-field
    include ../../components/select/select
    include ../../components/checkbox/checkbox
    include ../../components/masked-text-field/masked-text-field
    include ../../components/datepicker/datepicker
    include ../../components/range-slider/range-slider
    include ../../components/filter-date-select/filter-date-select
    include ../../components/subscription-text-field/subscription-text-field
    include ../../components/radio-button/radio-button
    include ../../components/toggle/toggle
    include ../../components/like-button/like-button
    include ../../components/rate-button/rate-button
    include ../../components/button/button
    include ../../components/pagination/pagination
    include ../../components/bullet-list/bullet-list
    include ../../components/expandable-checkbox-list/expandable-checkbox-list
    include ../../components/description/description.pug
    include ../../components/user-review/user-review.pug
    include ../../components/rich-checkbox/rich-checkbox
    include ../../components/label/label
    include ../../components/label-state/label-state

    div(class='ui-kit-form-elements__wrapper')

        div(class='ui-kit-form-elements__text-fields')
            div(class='ui-kit-form-elements__wrapper')
                div(class = 'input-field__label-wrapper')
                    +label('text-field','text field')
                    +label-state('text-field','default')
                +textField('text-field','Email',null , 'TEXT FIELD','default','DEFAULT')
            div(class='ui-kit-form-elements__wrapper')
                div(class = 'input-field__label-wrapper')
                    +label('text-field','text field')
                    +label-state('text-field','Hover / Focus')
                +textField('text-field','Email','This is pretty awesome', 'TEXT FIELD','hover','HOVER/FOCUSED')
            div(class='ui-kit-form-elements__wrapper')
                div(class = 'input-field__label-wrapper')
                    +label('select','dropdown')
                +select('select','text','Сколько гостей',null ,'DROPDOWN', null, null, 'Взрослые','Дети','Младенцы','0','0')
            div(class='ui-kit-form-elements__wrapper')
                div(class = 'input-field__label-wrapper')
                    +label('masked-text-field','masked text field')
                +masked-text-field('masked-text-field','ДД.ММ.ГГГГ','', 'MASKED TEXT FIELD','masked', true)

        div(class='ui-kit-form-elements__date-text-fields')
            +datepicker('name', 'text', 'ДД.ММ.ГГГГ', '', 'DATE DROPDOWN', 'datepicker')
            div(class='ui-kit-form-elements__wrapper')
                div(class = 'input-field__label-wrapper')
                    +label('filter date dropdown','filter date dropdown')
                +filter-date-select('date-select','ДД.ММ.ГГГГ','' , 'FILTER DATE DROPDOWN','masked')
            div(class='ui-kit-form-elements__wrapper')
                div(class = 'input-field__label-wrapper')
                    +label('subscription text field','subscription text field')
                +subText('sub-text', 'Email', '', "SUBSCRIPTION TEXT FIELD")

        div(class='ui-kit-form-elements__checkboxes')
            div(class='ui-kit-form-elements__checkbox-wrapper')
                div(class='ui-kit-form-elements__wrapper')
                    div(class = 'input-field__label-wrapper')
                        +label('checkbox-buttons','Checkbox Buttons')
                +inputCheck ('checkbox', 'Можно курить', true)
                +inputCheck ('checkbox', 'Можно с питомцами', true)
                +inputCheck ('checkbox', 'Можно пригласить гостей (до 10 человек)', true)
            div(class='ui-kit-form-elements__radio-btn-wrapper')
                div(class='ui-kit-form-elements__wrapper ui-kit-form-elements__radio-btn-label-wrapper')
                    div(class = 'input-field__label-wrapper')
                        +label('radio-buttons','Radio Buttons')
                +radioBtn('radio-button','Мужчина',true)
                +radioBtn('radio-button','Женщина',true)
            div(class='ui-kit-form-elements__toggle-wrapper')
                div(class='ui-kit-form-elements__wrapper')
                    div(class = 'input-field__label-wrapper')
                        +label('toggle','Toggle')
                +toggle('toggle', 'Получать спецпредложения',true)
                +toggle('toggle', 'Получать спецпредложения',true)
            div(class='ui-kit-form-elements__like-btn-wrapper')
                div(class='ui-kit-form-elements__wrapper ui-kit-form-elements__like-btn-label-wrapper')
                    div(class = 'input-field__label-wrapper')
                        +label('like-button','like button')
                +likeBtn('like-btn', 'span',false)
                +likeBtn('like-btn', 'span',false)

            +rateBtn('rate-btn', 'span')
            +btn('filled', 'CLICK ME')
            +btn('unfilled', 'CLICK ME')
            +btn('long', 'ПЕРЕЙТИ К ОПЛАТЕ')
            +btn('frameless', 'CLICK ME')
            +pagination('pagination', 'PAGINATION')
        div(class='ui-kit-form-elements__dropdowns')
            +select('select-small','text','2 спальни, 2 кровати...',null ,'DROPDOWN', null, null, 'Взрослые','Дети','Младенцы','1','1',1)
            +select('select-small','text','2 спальни, 2 кровати...',null ,'DROPDOWN', null, null, 'Взрослые','Дети','Младенцы','1','1',1)
            +select('select','text','Сколько гостей',null ,'DROPDOWN', null, null, 'Взрослые','Дети','Младенцы','0','0')
            +select('select','text','Сколько гостей',null ,'DROPDOWN', null, null, 'Взрослые','Дети','Младенцы','1','1')
        div(class='ui-kit-form-elements__lists')
            +bulletList('bullet-list', 'bullet-list', 'Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00')
            +checkboxList('checkbox-list','checkbox-list','Завтрак','Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь')
            +richCheckbox('rich-checkbox', 'rich-checkbox','Широкий коридор','Ширина коридоров в номере не менее 91 см.')
        div(class='ui-kit-form-elements__info')
            +description('/public/icons/material-icons/mood.svg','Комфорт','Шумопоглащающие стены')
            +description('/public/icons/material-icons/location_city.svg','Удобство','Окно в каждой из спален')
            +userRev('/public/images/murad.png','Мурад Сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
block scripts
    script(src=require('index'))

